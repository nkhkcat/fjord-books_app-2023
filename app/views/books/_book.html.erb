<div id="<%= dom_id book %>">
  <p>
    <%= t("item.book.title.html") %>
    <%= book.title %>
  </p>

  <p>
    <%= t("item.book.memo.html") %>
    <%= book.memo %>
  </p>

  <p>
    <%= t("item.book.author.html") %>
    <%= book.author %>
  </p>

  <p>
    <%= t("item.book.picture.html") %>
    <%= image_tag(book.picture_url) if book.picture.present? %>
  </p>

</div>
